    <div class="row g-2 mt-2">
        <form action="/sendAppLink" method="POST" class="rounded-3 mb-2 p-2" style="background: #eee;">
            <div class="row g-2">

                <div class="col-md col-md-4 text-center">
                    <div class="pt-4">
                        <h3>DCleans Stores Near You</h3>
                    </div>
                </div>

                <div class="col-md col-md-3">
                    <div class="form-group">
                        <label for="name">State</label>
                        <input type="text" name="name" class="form-control">
                    </div>
                </div>
                <div class="col-md col-md-3">
                    <div class="form-group">
                        <label for="name">City</label>
                        <input type="text" name="name" class="form-control">
                    </div>
                </div>
                <div class="col-md col-md-2">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-md btn-success mt-4" type="button">Find Services</button>
