    <div class="row g-0 mb-3 mt-2">
        <div class="col-md col-md-4">
            <div class="dc-downloads">
                <ul class="list-group list-group-flush">
                    {{#each stores}}
                        <li class="list-group-item">{{this.name}}: {{this.address}}</li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-md col-md-8">
